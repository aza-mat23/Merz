{
    "trailingComma": "none",
    "bracketSpacing": true,
    "bracketSameLine": true,
    "singleAttributePerLine": true,
    "printWidth": 1500,
    "useTabs": false,
    "tabWidth": 4,
    "overrides": [
        {
            "files": "**/lwc/**/*.html",
            "options": { "parser": "lwc" }
        },
        {
            "files": "*.{cmp,page,component}",
            "options": { "parser": "html" }
        }
    ]
}
